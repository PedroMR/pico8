--update

function _update()
 local dx,dy=0,0
 if (btn(1)) dx= 2 
 if (btn(0)) dx=-2
 if (btn(3)) dy= 2 
 if (btn(2)) dy=-2
 
 pl.x += dx
 if (pl.x < 0 or pl.x > 120) then
  pl.x -= dx
 end
 
 pl.y += dy
 if (pl.y < 0 or pl.y > 120) then
  pl.y -= dy
 end
 
 if dx==0 then pl.s = 2
 else pl.s = 2+sgn(dx)
 end

	pl.next_shot-=1;
 
 if btn(5) and pl.next_shot <= 0 then
   pl.next_shot=4
   add(pl_bul, {s=4,x=pl.x-4,y=pl.y+3,vy=-3})
   add(pl_bul, {s=4,x=pl.x+4,y=pl.y+3,vy=-3})
 end

 for i,b in pairs(pl_bul) do
 	b.y += b.vy
 end

end


