-- draw

function _draw()
 cls()
 --enemies
 
 -- player
	spr(pl.s,pl.x,pl.y)
 local flame=18
 if(flr((40*t()))%2==0) flame=17
	spr(flame,pl.x,pl.y+8)
	-- player bullets
 for i,b in pairs(pl_bul) do
 	spr(b.s,b.x,b.y)
 end
 --enemy bullets
end
