-- shmup
margin=24
x0=margin
x1=128-margin

local lvl_ypos=-20
function add_w3e1(r)
 local x=20+x0
 if (r) x=128-x
 for i=1,3 do
		add(lvl.spawn, {e=1,b=1,x=x,y=lvl_ypos})
		lvl_ypos-=10
 end
 lvl_ypos-=35
end

lvl={spawn={}}
add_w3e1(true)
add_w3e1()

function init_game()
	actors={}
	pl_bul={}
	cam={x=0,y=0}
	pl={x=56,y=100,s=2,next_shot=0}
end


init_game()
