-- house (for juliaì›ƒ)

local scrollx=0
local horizon=50

local clouds={}

function _init()
 for ty=0,16 do
  for tx=0,16 do
   local t=mget(tx,ty)
   local f=fget(t)
   if band(f,1)>0 then
    --found cloud
    add(clouds, {x=tx*8,y=ty*8,spr=t})
    mset(tx,ty,0)
   end
  end
 end
end

function _draw()
	cls(12)
	rectfill(0,horizon,128,128,3)
	map()
	for c in all(clouds) do
	 local cx=(136+8+c.x-scrollx) % 136 - 8
	 spr(c.spr, cx, c.y)
	end
end

local tts=8
function _update()
 tts-=1
 if(tts<=0) tts=8 scrollx+=1
end


